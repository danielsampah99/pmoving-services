{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": [
			"src/**/*.css ",
			"src/payload-types",
			"src/payload*",
			"src/payload.config.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": [
			"src/**/*.css",
			"src/payload-types.ts"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"style": {
				"useSelfClosingElements": {
					"fix": "safe",
					"level": "error"
				}
			},
			"complexity": {
				"noForEach": "off"
			}
		},
		"ignore": ["src/payload*"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
